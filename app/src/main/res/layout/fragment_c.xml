<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    >
    <TextView
        android:layout_marginLeft="150dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/host"/>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/bt_c1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="高级用户"
            android:textSize="15dp"
            android:background="#ff9900"/>
        <Button
            android:id="@+id/bt_c2"
            android:layout_toRightOf="@+id/bt_c1"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="意见反馈"
            android:textSize="15dp"
            android:background="#ff9900"/>
        <Button
            android:id="@+id/bt_c3"
            android:layout_toRightOf="@+id/bt_c2"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="数据备份"
            android:textSize="15dp"
            android:background="#ff9900"/>
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/bt_c4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="个人资料"
            android:textSize="15dp"
            android:background="#ff9900"/>
        <Button
            android:id="@+id/bt_c5"
            android:layout_toRightOf="@+id/bt_c4"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="智能计划"
            android:textSize="15dp"
            android:background="#ff9900"/>
        <Button
            android:id="@+id/bt_c6"
            android:layout_toRightOf="@+id/bt_c5"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="修改计划"
            android:textSize="15dp"
            android:background="#ff9900"/>
    </RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">
        <Button
            android:id="@+id/bt_c7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="购物车"
            android:textSize="15dp"
            android:background="#ff9900"/>
        <Button
            android:id="@+id/bt_c8"
            android:layout_toRightOf="@+id/bt_c7"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="我的钱包"
            android:textSize="15dp"
            android:background="#ff9900"/>
        <Button
            android:id="@+id/bt_c9"
            android:layout_toRightOf="@+id/bt_c8"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="实验室"
            android:textSize="15dp"
            android:background="#ff9900"/>
    </RelativeLayout>
</LinearLayout>
